<div class='devise-form text-center'>
  <h2>ログイン</h2>

  <%= form_with(model: resource, scope: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

    <div class="form-group">
      <label class="text-secondary">Eメール</label><br />
      <%= f.email_field :email, autofocus: true, placeholder: "必須", class: "form-control"%>
    </div>

    <div class="form-group">
      <label class="text-secondary">パスワード</label><br />
      <%= f.password_field :password, placeholder: "必須（６文字以上）",class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary de-btn" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>