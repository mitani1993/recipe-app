<div class='devise-form text-center'>
  <h2>新規登録</h2>

  <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

    <div class="form-group">
      <label class="text-secondary">ニックネーム</label><br />
      <%= f.text_field :name, autofocus: true, placeholder: "必須", class: "form-control"%>
    </div>

    <div class="form-group">
      <label class="text-secondary">Eメール</label><br />
      <%= f.email_field :email, autofocus: true, placeholder: "必須", class: "form-control"%>
    </div>

    <div class="form-group">
      <label class="text-secondary">パスワード</label><br />
      <%= f.password_field :password, placeholder: "必須（６文字以上）",class: "form-control" %>
    </div>

    <div class="field">
      <label class="text-secondary">パスワード（確認）</label><br />
      <%= f.password_field :password_confirmation, placeholder: "必須（６文字以上）", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: "btn btn-primary de-btn" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>